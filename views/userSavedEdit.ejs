<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <title><%= title %></title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

    <a class="back-btn" onclick="history.back()">>> Back</a>

    <section class="add-recipes">
    <% save.forEach(saved => { %>
        <form action="/saved/edit/<%= saved.rec_id %>" method="post" enctype="multipart/form-data" onsubmit="getIngs()">
            <h3>edit recipes</h3>
            <label for="recNameLbl" class="addRecLabel">Name: </label>
                <input type="text" name="recNameInp" id="recNameInp" required placeholder="type your recipe name here" maxlength="100" class="box" value="<%= saved.rec_name%>" readonly>
            <label for="recDescLbl" class="addRecLabel">Description: </label>
                <textarea name="recDescInp" id="recDescInp" class="textareabox" cols="30" rows="10" required placeholder="type your recipe description here" maxlength="1000" readonly ><%= saved.rec_desc%></textarea>
            <label for="recPrcLbl" class="addRecLabel">Process: </label>
                <textarea name="recPrcInp" id="recPrcInp" class="textareabox" cols="30" rows="10" required placeholder="type the recipe directions here" maxlength="10000"><%= saved.rec_process%></textarea>
            <label for="recPrcLbl" class="addRecLabel">Category: </label>
                <select name="recCateg" id="recCateg" value="<%= saved.rec_categ%>" required class="smallbox" readonly>
                    <option value="" disabled selected>select category --</option>
                    <option value="Luzon">Luzon</option>
                    <option value="Visayas">Visayas</option>
                    <option value="Mindanao">Mindanao</option>
                    <option value="Popular">Popular</option>
        </select><br>
        <label for="recTimeLbl" class="addRecLabel">Time Process: </label>
            <input type="text" name="recTimeInp" id="recTimeInp" placeholder="total time (hr/min)" maxlength="20" class="timebox" value="<%= saved.rec_time%>"><br>
        <label for="recSrvLbl" class="addRecLabel">Serving: </label>
            <input type="text" name="recSrvInp" id="recSrvInp" placeholder="total portion" maxlength="10" class="servingbox" value="<%= saved.rec_serving%>"><br>
        <label for="recSrcLbl" class="addRecLabel">Source: </label>
            <input type="url" name="recSrcInp" id="recSrcInp" required placeholder="source link of recipe" maxlength="500" class="mediumbox" value="<%= saved.rec_src%>"><br>
        <label for="recVidLbl" class="addRecLabel">Video Link: </label>
            <input type="url" name="recVidInp" id="recVidInp" placeholder="youtube link of recipe video" maxlength="500" class="mediumbox" value="<%= saved.rec_vid%>"><br>
        <label for="recCalLbl" class="addRecLabel">Calorific Value: </label>
            <input type="text" name="recCalInp" id="recCalInp" placeholder="calorific value" maxlength="10" class="servingbox" value="<%= saved.rec_cal%> readonly"><br><br>
        <label for="recMTime" class="addRecLabel">Meal Time: </label>
            <input type="text" name="recMTimeInp" id="recMTimeInp" value="<%= saved.rec_mealTime%>" class="timebox" readonly><br>
            <%# if (r.rec_cal == 'Breakfast') { %>
                <!-- <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Breakfast" checked>
                <label for="mtBreakfast">Breakfast</label>
                <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Lunch">
                <label for="mtLunch">Lunch</label>
                <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Dinner">
                <label for="mtDinner">Dinner</label><br><br> -->
            <%#} else if (r.rec_cal == 'Lunch') { %>
                <!-- <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Breakfast">
                <label for="mtBreakfast">Breakfast</label>
                <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Lunch" checked>
                <label for="mtLunch">Lunch</label>
                <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Dinner">
                <label for="mtDinner">Dinner</label><br><br> -->
            <%#} else { %>
                <!-- <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Breakfast">
                <label for="mtBreakfast">Breakfast</label>
                <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Lunch">
                <label for="mtLunch">Lunch</label>
                <input type="checkbox" id="recMTimeInp" name="recMTimeInp" value="Dinner" checked>
                <label for="mtDinner">Dinner</label><br><br> -->
            <%# } %> 
            <% if (saved.rec_img) { %>
                <img src="/images/<%= saved.rec_img%>" alt="<%= saved.rec_name %> Image" class="img-rec">
            <% } %><br><br>
        <% }) %>
        <!-- ings -->
        <% let counter = 0; %> 
        <label for="recIng" class="addRecLabel">Ingredients: </label><br>
        <label for="ingQuantLbl" class="addRecLabel">Quantity: </label>
        <label for="ingUnitLbl" class="addRecLabel">Unit: </label>
        <label for="ingNameLbl" class="addRecLabel">Ingredient: </label>
        <label for="ingInsLbl" class="addRecLabel">Instruction: </label>
        
        <div id="ingInps" class="add-ingredients">
        <% ing.forEach(z => { %>
            <% counter++ %>
            <% if (z.ingQuant == 0) { %>
                <br><input type="text" name="ingQuantInp[]" id="ingQuantInp<%= counter%>" value="" placeholder="Quantity" maxlength="10" class="s_ingredientbox">
            <% } else { %>
                <br><input type="text" name="ingQuantInp[]" id="ingQuantInp<%= counter%>" value="<%= z.ingQuant%>" placeholder="Quantity" maxlength="10" class="s_ingredientbox">
             <% } %> 
            <input type="text" name="ingUnitInp[]" id="ingUnitInp<%= counter%>" value="<%= z.ingUnit%>" placeholder="Unit" maxlength="10" class="s_ingredientbox">
            <input type="text" name="recIng[]" id="recIng<%= counter%>" value="<%= z.ing_name%>" required placeholder="Ingredient" maxlength="100" class="ingredientbox">
            <input type="text" name="ingInsInp[]" id="ingInsInp<%= counter%>" value="<%= z.ingIns%>" placeholder="Instruction" maxlength="500" class="ingredientbox">
        <% }) %>
        <input type="hidden" id="ingNum" name="ingNum" value="<%= counter%>" >
        </div>
            <input type="hidden" name="qval" value="" id="qval" placeholder="Quantity" maxlength="10" class="s_ingredientbox">
            <input type="hidden" name="idval" value="" id="idval" placeholder="Unit" maxlength="10" class="s_ingredientbox">
            <input type="hidden" name="uval" value="" id="uval" placeholder="Ingredient" maxlength="100" class="ingredientbox">
            <input type="hidden" name="insval" value="" id="insval" placeholder="Ingredient" maxlength="100" class="ingredientbox">
            <button id="addIngredientsBtn" type="button" class="createbtn">Add Another Ingredient</button><br><br>
            <button type="submit" class="btn">Update Saved Recipe</button>
    </form>
</section>    
    

    <script type="text/javascript">
        $('#addIngredientsBtn').on('click', add);
        function getIngs() {
            let qv = [];
            let iv = [];
            let uv = [];
            let insv = [];
            jQuery('input[name="ingQuantInp[]"]').each(function() {
                    qv.push(this.value);
            });
            jQuery('input[name="recIng[]"]').each(function() {
                let ingstr = this.value.toLowerCase();
                iv.push(ingstr);
            });
            jQuery('input[name="ingUnitInp[]"]').each(function() {
                
                uv.push(this.value);
            });
            jQuery('input[name="ingInsInp[]"]').each(function() {
    
                insv.push(this.value);
            });

            $('#qval').val(JSON.stringify(qv));
            $('#idval').val(JSON.stringify(iv));
            $('#uval').val(JSON.stringify(uv));
            $('#insval').val(JSON.stringify(insv));

        }
        function add() {
            console.log('add button clicked....');
            let newIngNum = parseInt($('#ingNum').val()) + 1;

            let quantInp = '<br><input type="text" name="ingQuantInp[]" id="ingQuantInp'+ newIngNum +' "placeholder="Quantity" maxlength="10"  class="s_ingredientbox">';
            let ingInp = '<input type="text" name="recIng[]" id="recIng'+ newIngNum +' "required placeholder="Ingredient" maxlength="100" class="ingredientbox">';
            let unitInp = '<input type="text" name="ingUnitInp[]" id="ingUnitInp'+ newIngNum +' "placeholder="Unit" maxlength="10" class="s_ingredientbox">';
            let insInp = '<input type="text" name="ingInsInp[]" id="ingInsInp'+ newIngNum+' "placeholder="Instruction" maxlength="500" class="ingredientbox">';

            $('#ingInps').append(quantInp);
            $('#ingInps').append(unitInp);
            $('#ingInps').append(ingInp);
            $('#ingInps').append(insInp);

            $('#ingNum').val(newIngNum);    
        }
    </script>
</body>
</html>