    <form action="/mealPlan/weekview" method="post">
        <label for="weekView" class="addWeekLabel">Week:</label>
                    <input type="radio" id="weekViewInp" name="weekViewInp" value="Past Week" onchange="this.form.submit()" >
                        <label for="wvPast" class="addWeekLabel">Past Week</label>
                    <input type="radio" id="weekViewInp" name="weekViewInp" value="Current Week" onchange="this.form.submit()">
                        <label for="wvCurrent" class="addWeekLabel">Current Week</label>
                    <input type="radio" id="weekViewInp" name="weekViewInp" value="Next Week" onchange="this.form.submit()">
                        <label for="wvNext" class="addWeekLabel">Next Week</label>
                        <br><br>
    </form>
    <table>
        <tbody>
            <% mealPlan.forEach( mealPlan => { %>
                <tr> 
                    <td><img src="/images/<%= mealPlan.rec_img%>" alt="<%= mealPlan.rec_name %> Image" height="150"></td>
                    <td><a href="/mealPlan/<%= mealPlan.rec_id%>"><%= mealPlan.rec_name %></a></td>
                    <td><%= mealPlan.sDay %></td>
                    <td>
                        <a href="/mealPlan/<%= mealPlan.rec_id%>" class="recview-btn">View Recipe</a>
                        <a href="/mealPlan/delete/<%= mealPlan.rec_id %>" class="recdelete-btn">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
     
