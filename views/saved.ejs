<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/logo/logo-recipinoy.png" type="image/icon type">

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
 
    <!-- custom css file link  -->
    <link rel="stylesheet" href="/public/css/style.css">

    <title>Recipes</title>
    <style>
        .container{
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .card {
            display:flex;
            border-style: solid;
            border-width: 1px;
            width: 600px;
            margin: 2vh;
        }

        .image{
            width: 50px;
            left: 0;
            width: 30%;
            height: 100%;
        }

        .detail{
            margin-left: 10px;
            width: 70%;
        }

        .food-title{
            margin-top: 5px;
        }

        .food-title a{
            color: black;
        }

        .food-title a:hover{
            color:chartreuse;
        }

        .saved-buttons{
            display: flex;
            justify-content: center;
            margin-left: 20px;
        }

        .saved-button{
            background-color: green;
            margin-right: 30px;
            border-radius: 50px;
            width: 100px;
            height: 30px;
            text-align: center; 
            margin-top: 50px;
            transition: 1s;
        }
        
        .saved-button a{
            text-decoration: none;
            color: white;
        }

        .saved-button:hover{
            background-color: white;
            color: black;
        }

        .saved-button a:hover{
            color: black;
        }

    </style>
</head>
<body>
   <!-- guest header -->
   <%- include('./partials/userNav'); %>
   <%#- include('./partials/guestNav'); %>

    <form action="/saved" method="get">
        <!--<div id="sortResults">
            <select name="recent" id="recent" onchange="this.form.submit()">
                <option value="" disabled selected>sort to newest</option>
                <option value="newest">newest</option>
                <option value="oldest">oldest</option>
            </select>-->
            <div class="container">
                <% save.forEach( saved => { %>
                    <div class="card">
                        <div class="image">
                            <img src="/images/<%= saved.rec_img%>" alt="<%= saved.rec_name %> Image" style="width: 100%; height:100%;">
                        </div>
                        <div class="details">
                            <div class="food-title">
                                <a style="font-size: 25px; text-decoration: none; margin-left: 15px;" href="/saved/<%= saved.rec_id%>"><%= saved.rec_name %></a>
                            </div>
                                <% if (saved.rec_rating != 0) { %>
                            <div class="rating" style="display:flex; font-size: 20px; margin-left: 15px;">
                                <p>Rating: <%=saved.rec_rate  %> </p>
                                <% } %>
                            </div>
                            <div class="saved-buttons">
                                <button class="saved-button"><a href="/saved/<%= saved.rec_id%>" class="recview-btn">View Recipe</a></button>
                                <button class="saved-button"><a href="/saved/edit/<%= saved.rec_id %>" class="recedit-btn">Edit</a></button>
                                <button class="saved-button"><a href="/saved/delete/<%= saved.rec_id %>" class="recdelete-btn">Delete</a></button>
                            </div>
                        </div>   
                    </div>
                <% }) %>
            </div>
    </form>   
    
    <!-- <div class="loader">
        <img src="/images/loader.gif" alt="">
    </div> -->

    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>

    <!-- custom js file link  -->
    <script src="/public/js/script.js"></script>
</body>
</html>